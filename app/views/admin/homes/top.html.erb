<div class="container">
  <div class="row">
    <span class="lead my-3 col-md-2 offset-md-1 bg-light">注文履歴一覧</span>
    <table class="table my-3 offset-md-1 col-md-9">
      <thead>
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= link_to order.created_at.strftime('%Y/%m/%d %-H:%-M:%-S'), admin_order_path(order) %></th>
          <th><%= order.customer.full_name %></th>
          <% sum = 0 %>
          <th>
            <% order.order_details.each do |order_detail| %>
              <% sum =  sum + order_detail.amount %>
            <% end %>
            <%= sum %>
          </th>
          <th><%= order.status %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-sm-2 ">
    <%= paginate @orders %>
  </div>
</div>
