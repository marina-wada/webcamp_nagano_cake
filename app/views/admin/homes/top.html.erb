<div class="container">
  <div class="row">
    <span class="lead my-3 col-sm-2 offset-sm-1 bg-light">注文履歴一覧</span>
    <table class="table my-3 offset-sm-1">
      <thead>
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= order_derail.created_at %></th>
          <th><%= link_to home.full_name, admin_order_path(order.id) %></th>
          <th><%= order_derail.amount %></th>
          <th><%= f.collection_select(:status, orders, :id, :name) %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
