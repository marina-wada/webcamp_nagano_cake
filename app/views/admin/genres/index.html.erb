<div class="container">
  <div class="row">
    <span class="lead mt-md-3 col-md-3 offset-md-1 bg-light">ジャンル一覧・追加</span>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="row">
      <label class="mt-md-5 mx-md-4">ジャンル名</label>
      <%= f.text_field :genre, class: "mt-md-5 mr-md-4", placeholder: "ジャンル名" %>
      <%= f.submit "新規登録", class: "mt-md-5 btn btn-success btn-sm px-md-4" %>
    </div>
    <% end %>
  </div>
      <table class="table col-md-4 mt-md-5">
        <thead>
          <tr class="table-active">
            <th colspan="2">ジャンル</th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <th><%= genre.name %></th>
            <th><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></th>
          </tr>

        </tbody>
        <% end %>
      </table>
</div>

