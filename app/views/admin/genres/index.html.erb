<div class="container">
  <div class="row">
    <div class="col mt-3">
      <span class="lead my-3 col-md-2 offset-sm-1 bg-light">ジャンル一覧・追加</span>
    </div>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">ジャンル名</label>
      <%= f.text_field :genre, class: "form-control" %>
      <%= f.submit "新規登録", class: "btn btn-success btn-sm col-sm-3" %>
    </div>
  </div>
  </div>
</div>
