<div class="container">
  <div class="row">
    <span class="lead mt-md-3 col-md-2 offset-md-1 bg-light">ジャンル編集</span>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>
    <div class="row">
      <label class="mt-md-5 mx-md-4">ジャンル名</label>
      <%= f.text_field :name, class: "mt-md-5 mr-md-4" %>
      <%= f.submit "変更を保存", class: "mt-md-5 btn btn-success btn-sm px-md-4" %>
    </div>
    <% end %>
  </div>
</div>