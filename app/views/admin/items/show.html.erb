<div class="container">
  <div class="row">
    <span class="lead my-3 col-sm-2 offset-sm-1 bg-light">商品詳細</span>
  </div>
  <div class="row">
    <div class="col-sm-3 mt-5">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "200x200" %>
    </div>
    <div class="col-sm-4 mt-5">
      <table class="table text-nowrap table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>
              税込価格<br>
              (税抜価格)
            </td>
            <td>
              <%= @item.add_tax_price.to_s(:delimited) %>
              (<%= @item.price.to_s(:delimited) %>)円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mt-sm-2 offset-sm-4">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
