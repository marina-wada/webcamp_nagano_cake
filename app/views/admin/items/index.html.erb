<div class="container">
  <div class="row">
    <div class="col mt-3">
      <span class="lead my-3 col-md-4 offset-sm-1 bg-light">商品一覧</span>
    </div>
    <div class="col-md-4ml-auto">
      <%= link_to "", new_admin_item_path, class: "fas fa-plus-circle fa-2x mt-3" %>
    </div>

    <table class="table my-3 offset-sm-1">
      <thead>
        <tr class="table-active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <%= @items.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <th><%= item.name %></th>
          <th><%= item.price %></th>
          <th><%= item.genre_id %></th>
          <th><%= item.is_active %></th>
        </tr>
      </tbody>
    </table>
  </div>
</div>
