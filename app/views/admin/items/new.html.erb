<div class="container">
  <div class="row">
    <div class="col mt-3">
      <span class="lead my-3 col-md-2 offset-sm-1 bg-light">商品新規登録</span>
    </div>
  </div>
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">商品画像</label>
    <%= f.attachment_field :image, class: "attachment-control" %>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">商品名</label>
      <%= f.text_field :name, class: "form-control col-sm-5", placeholder: "商品名" %>
    </div>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">商品説明</label>
    <%= f.text_area :introduction, class: "form-control col-sm-5", placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">ジャンル</label>
    <!--<select class="custom-select custom-select-sm col-sm-5">-->
    <!--  <option selected>--選択してください--</option>-->
    <!--  <option value="1">ケーキ</option>-->
    <!--  <option value="2">プリン</option>-->
    <!--  <option value="3">焼き菓子</option>-->
    <!--  <option value="4">キャンディ</option>-->
    <!--</select>-->
    <%= f.select :genre, [["ケーキ", 1], ["プリン", 2], ["焼き菓子", 3], ["キャンディ", 4]] %>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">税抜価格</label>
    <%= f.text_field :price, class: "form-control col-sm-5", placeholder: "1000" %>
    <label class="m-sm-1">円</label>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 offset-sm-2 col-form-label">販売ステータス</label>
      <p><%= f.radio_button :active, "販売中" %>販売中</p>
      <p class="ml-sm-5"><%= f.radio_button :active, "販売停止中" %>販売停止中</p>
    </div>

  <div class="actions mt-1 offset-sm-5">
    <%= f.submit "新規登録", class: "btn btn-success btn-sm col-sm-3" %>
  </div>
  <% end %>
</div>