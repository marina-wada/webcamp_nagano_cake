<div class="container">
  <div class="row">
    <span class="lead my-md-3 col-md-2 offset-md-1 bg-light">新規会員登録</span>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <%= f.label :名前, class: "col-md-3 mt-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4 d-flex flex-row">
        <span class="small mt-md-4 mr-md-4">(姓)</span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control form-control-sm", placeholder: "令和" %>
      </div>
      <div class="col-md-4 d-flex flex-row">
        <span class="small mt-md-4 mr-md-4">(名)</span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control form-control-sm", placeholder: "道子" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4 d-flex flex-row">
        <span class="small">(セイ)</span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control form-control-sm", placeholder: "レイワ" %>
      </div>
      <div class="col-md-4 d-flex flex-row">
        <span class="small">(メイ)</span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control form-control-sm", placeholder: "ミチコ" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control form-control-sm", placeholder: "0000000" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :住所, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-8">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control form-control-sm", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :電話番号（ハイフンなし）, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control form-control-sm", placeholder: "0000000000" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード（6文字以上）, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード（確認用）, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="actions mt-2 col-md-3 offset-3 col-form-label">
        <%= f.submit "新規登録", class: "form-control form-control-sm btn btn-success btn-sm" %>
      </div>
    </div>

    <div class="row">
      <span class="lead my-md-3 col-md-2 offset-md-1 bg-light">既に登録済みの方</span>
    </div>
    <div class="row">
      <div class="offset-md-2 mt-md-2">
        <%= link_to "こちら", new_customer_session_path %>からログインしてください。
      </div>

<% end %>
</div>