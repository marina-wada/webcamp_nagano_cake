<div class="container">
  <div class="row">
    <span class="lead my-3 col-sm-2 offset-sm-1 bg-light">管理者ログイン</span>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-sm-2 offset-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード, class: "col-sm-2 offset-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="actions mt-2 col-sm-2 offset-sm-4 col-form-label">
        <%= f.submit "ログイン", class: "form-control form-control-sm btn btn-primary btn-sm" %>
      </div>
    </div>
  <% end %>
</div>