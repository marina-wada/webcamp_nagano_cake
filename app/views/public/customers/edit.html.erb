<div class="container">
  <div class="row">
    <span class="lead col-md-2 offset-md-0 mt-md-3 bg-light">会員情報修正</span>
  </div>
  <%= form_with model: @customer, url: customer_path(current_customer), local: true do |f| %>
    <div class="form-group row mt-md-4">
      <%= f.label :氏名, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-md-9 form-control form-control-sm" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-9 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-9 form-control form-control-sm" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-9 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :郵便番号, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-9 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :住所, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-6">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :電話番号, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-9 col-md-4 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-md-2 col-form-label col-form-label-sm" %>
      <div class="col-md-3">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-md-9 form-control form-control-sm" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-4 offset-md-2">
        <%= f.submit :編集内容を保存, class: "col-md-7 form-control form-control-sm btn btn-success btn-sm" %>
      </div>

     <div class="col-md-4">
       <%= link_to "退会する", unsubscribe_customers_path, class: "col-md-4form-control form-control-sm btn btn-danger btn-sm" %>
     </div>
    <% end %>


</div>
