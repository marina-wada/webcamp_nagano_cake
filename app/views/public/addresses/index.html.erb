<div class="container">
  <div class="row">
    <span class="lead col-md-2 mt-md-3 offset-md-1 bg-light">配送先登録/一覧</span>
  </div>
  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
    <div class="form-group row mt-md-4">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "offset-md-0 col-md-8 form-control form-control-sm", placeholder: "0000000" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :住所, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "offset-md-0 col-md-8 form-control form-control-sm", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :宛名, class: "col-md-3 col-form-label col-form-label-sm" %>
      <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "offset-md-0 col-md-8 form-control form-control-sm", placeholder: "令和道子" %>
      </div>
      <div class="col-md-4">
        <%= f.submit :新規登録, class: "form-control offset-md-2 form-control-sm col-md-3 btn btn-success btn-sm" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8 mt-md-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), class: "btn btn-danger", method: :delete %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>