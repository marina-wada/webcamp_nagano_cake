<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'public/list',genre:@genre %>
    </div>
    <div class="col">
      <span class="lead">商品一覧（全<%= @items.name.count %>件）</span>
      <% @item.each do |item| %>
      <div>
        <%= attachment_image_tag item, :image, format: 'jpeg', size: "100x100" %><br>
        <%= item.introduction %><br>
        ¥<%= item.add_tax_price.to_s(:delimited) %>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-sm-2 ">
      <%= paginate @items %>
    </div>
  </div>
</div>