<div class="container">
  <div class="row">
    <span class="lead col-md-2 offset-md-0 bg-light">注文情報入力</span>
  </div>
  <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
  <div class="custom-control custom-radio mt-md-2">
    <label class="col-form-label">支払方法</label>
    <div class="radio-inline col-md-4 ml-md-3">
      <%= f.radio_button :total_payment, "クレジットカード", checked: true %>クレジットカード<br>
      <%= f.radio_button :total_payment, "銀行振込" %>銀行振込

    </div>
  </div>
  <div class="custom-control custom-radio mt-md-2">
    <label class="col-form-label">お届け先</label>
    <div class="radio-inline col-md-12 ml-md-3">
      <%= f.radio_button :address, "address", checked: true %>ご自身の住所
      <div class="col">
        〒<%= current_customer.destination %>
      </div>
    </div>

    <div class="radio-inline col-md-12 ml-md-3 mt-md-2">
      <%= f.radio_button :address, "address" %>登録住所から選択
      <div class="col-md-12">
        <%= f.collection_select :address, current_customer.addresses, :id, :destination %>
      </div>
    </div>

    <div class="radio-inline col-md-12 ml-md-3 mt-md-2">
      <%= f.radio_button :address, "address" %>新しいお届け先
      <div class="form-group row ml-md-1">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 col-form-label col-form-label-sm" %>
        <div class="col-md-4">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-9 form-control form-control-sm", placeholder: "0000000" %>
        </div>
      </div>
      <div class="form-group row ml-md-1">
        <%= f.label :住所, class: "col-md-3 col-form-label col-form-label-sm" %>
        <div class="col-md-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control form-control-sm", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>
      <div class="form-group row ml-md-1">
        <%= f.label :宛名, class: "col-md-3 col-form-label col-form-label-sm" %>
        <div class="col-md-7">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-5 form-control form-control-sm", placeholder: "令和道子" %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <%= f.submit :確認画面に進む, class: "form-control offset-md-8 form-control-sm col-md-3 btn btn-primary btn-sm" %>
    </div>
  </div>
  <% end %>
</div>