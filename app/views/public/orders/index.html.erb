<div class="container">
  <div class="row">
    <span class="lead col-md-2 offset-md-0 bg-light mt-md-3">注文履歴一覧</span>
  </div>

  <div class="row">
    <div class="col mt-md-3">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              <%= order.postal_code %>
              <%= order.address %>
              <%= prder.name %>
            </td>
            <td><%= order.order_detail.item_name %></td>
            <td><%= order.order_detail.price %></td>
            <td><%= order.order_detail.status %></td>
            <td><%= link_to "表示する", order_path(order) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>