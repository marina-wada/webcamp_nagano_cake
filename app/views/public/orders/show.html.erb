<div class="container">
  <div class="row">
    <span class="lead col-md-2 offset-md-0 bg-light mt-md-3">注文履歴詳細</span>
  </div>

  <div class="row">
    <div class="col">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>

    <div class="col">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <tr><%= @order.total_payment %></tr>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.current_shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-bold">ご請求金額</th>
          <td><%= (@order.total_payment + @order.current_shipping_cost) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order.order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.price * order_detail.amount) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
